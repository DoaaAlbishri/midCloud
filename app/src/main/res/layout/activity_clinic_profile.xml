                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cairo"
                    android:text="120 Products"
                    android:textColor="#1D3639"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

