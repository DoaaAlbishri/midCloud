<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndividualHomeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tabBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/mask_group_1"
            android:layout_marginTop="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:src="@drawable/ads1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14Clinic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/cairo"
                android:text="Clinics"
                android:textColor="#1D3639"
                android:textSize="22dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/viewAllClinics"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cairo"
                    android:text="View All"
                    android:textColor="#FEC260"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/scrollViewPrayerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fillViewport="true"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:id="@+id/imageButtonClinic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/clinic1"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonClinic2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="19dp"
                        android:background="alp"
                        android:src="@drawable/clinic2"
                        android:layout_marginLeft="19dp" />

                    <ImageButton
                        android:id="@+id/imageButtonClinic3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/clinic3"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonClinic4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/clinic1"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonClinic5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="19dp"
                        android:background="alp"
                        android:src="@drawable/clinic2"
                        android:layout_marginLeft="19dp" />

                    <ImageButton
                        android:id="@+id/imageButtonClinic6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/clinic3"
                        />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="33dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14Doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cairo"
                    android:text="Doctors"
                    android:textColor="#1D3639"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:id="@+id/viewAllDoctors"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cairo"
                        android:text="View All"
                        android:textColor="#FEC260"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/scrollViewDoctors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fillViewport="true"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:id="@+id/imageButtonDoctor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor1"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonDoctor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="19dp"
                        android:background="alp"
                        android:src="@drawable/doctor2"
                        android:layout_marginLeft="19dp" />

                    <ImageButton
                        android:id="@+id/imageButtonDoctor3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor3"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonDoctor4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor4"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonDoctor5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="19dp"
                        android:background="alp"
                        android:src="@drawable/doctor5"
                        android:layout_marginLeft="19dp" />

                    <ImageButton
                        android:id="@+id/imageButtonDoctor6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor6"
                        />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="33dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14NewArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cairo"
                    android:text="New Arrival"
                    android:textColor="#1D3639"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:id="@+id/viewAllNewArrival"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cairo"
                        android:text="View All"
                        android:textColor="#FEC260"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/scrollViewNewArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fillViewport="true"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:id="@+id/imageButtonNewArrival1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor1"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonNewArrival2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="19dp"
                        android:background="alp"
                        android:src="@drawable/doctor2"
                        android:layout_marginLeft="19dp" />

                    <ImageButton
                        android:id="@+id/imageButtonNewArrival3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor3"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonNewArrival4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor4"
                        />

                    <ImageButton
                        android:id="@+id/imageButtonNewArrival5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="19dp"
                        android:background="alp"
                        android:src="@drawable/doctor5"
                        android:layout_marginLeft="19dp" />

                    <ImageButton
                        android:id="@+id/imageButtonNewArrival6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_weight="1"
                        android:background="alp"
                        android:src="@drawable/doctor6"
                        />
                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/cairo"
            android:textSize="31dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/cairo"
                android:elevation="2dp"
                android:textSize="14dp"
                app:cornerRadius="5dp"
                android:background="@drawable/searchbar"
                android:textColor="#D4D4D4"
                android:inputType="phone"
                android:gravity="center"
                android:hint="Search product, clinic or doctor"
                />

            <ImageView
                android:id="@+id/barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ionic_ios_barcode"
                android:layout_marginStart="-50dp"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="-50dp"></ImageView>

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_marginTop="-7dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/notification"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="20dp">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>