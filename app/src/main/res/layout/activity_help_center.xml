<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpCenterActivity"
    android:background="#F9F9F9"
    tools:ignore="MissingDefaultResource">



    <Button
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#0020393D"
        android:fontFamily="@font/cairo"
        android:text="Help Center"
        android:clickable="false"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>


    <Button
        android:id="@+id/backBtn"
        android:layout_width="13dp"
        android:layout_height="23dp"
        android:background="@drawable/icon_ionic_ios_arrow_back"
        android:theme="@style/Theme.backButton"
        android:fontFamily="@font/cairo"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"></Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tabBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:src="@drawable/mask_group_1"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></ImageView>

        <LinearLayout
            android:id="@+id/linearLayoutEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginStart="40.5dp"
            android:layout_marginEnd="40.5dp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo"
                android:text="Full Name"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:ems="10"
                android:fontFamily="@font/cairo"
                android:layout_marginTop="5dp"
                android:elevation="2dp"
                android:textSize="16dp"
                app:cornerRadius="5dp"
                android:background="@drawable/gray_border10"
                android:paddingStart="15.8dp"
                android:inputType="phone"
                android:hint="Full Name"
                android:paddingLeft="15.8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo"
                android:text="Email"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:ems="10"
                android:fontFamily="@font/cairo"
                android:layout_marginTop="5dp"
                android:elevation="2dp"
                android:textSize="16dp"
                app:cornerRadius="5dp"
                android:background="@drawable/gray_border10"
                android:paddingStart="15.8dp"
                android:inputType="phone"
                android:hint="Email"
                android:paddingLeft="15.8dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo"
                android:text="Message"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:ems="10"
                android:fontFamily="@font/cairo"
                android:layout_marginTop="5dp"
                android:elevation="2dp"
                android:textSize="16dp"
                app:cornerRadius="5dp"
                android:background="@drawable/gray_border10"
                android:paddingStart="15.8dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:inputType="textMultiLine"
                android:hint="Message"
                android:gravity="top"
                android:paddingTop="5dp"
                android:paddingLeft="15.8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginTop="60.5dp"
            android:textSize="20dp"
            android:gravity="center"
            app:cornerRadius="10dp"
            android:fontFamily="@font/cairo"
            android:layout_gravity="center"
            android:backgroundTint="@color/main_color"
            android:textAllCaps="false"
            android:text="Send"
            tools:ignore="MissingConstraints" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>