<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0020393D"
        android:fontFamily="@font/cairo"
        android:text="Close"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginRight="15dp"></Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tabBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:src="@drawable/mask_group_1"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></ImageView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="40dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo"
            android:text="Log In" />

        <LinearLayout
            android:id="@+id/linearLayoutEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginStart="40.5dp"
            android:layout_marginEnd="40.5dp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/PhonetextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo"
                android:text="Mobile Number"
                android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/editTextPhoneNumberLogin"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:fontFamily="@font/cairo"
                    android:elevation="2dp"
                    android:textSize="16dp"
                    app:cornerRadius="5dp"
                    android:drawableLeft="@drawable/drawablephone"
                    android:background="@drawable/graay_border"
                    android:paddingStart="15.8dp"
                    android:inputType="phone"
                    android:hint="  +966|"
                    android:textColorHint="@color/black"
                    android:paddingLeft="15.8dp" />

            <TextView
                android:id="@+id/PasstextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo"
                android:text="Password"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:ems="10"
                android:fontFamily="@font/cairo"
                android:drawableLeft="@drawable/drawablepassword"
                android:drawableRight="@drawable/combined_shape"
                android:paddingEnd="15dp"
                android:elevation="2dp"
                android:textSize="16dp"
                app:cornerRadius="5dp"
                android:background="@drawable/graay_border"
                android:paddingStart="15.8dp"
                android:inputType="textPassword"
                android:hint="   Password"
                android:paddingLeft="15.8dp"
                android:paddingRight="15dp" />


            <TextView
                android:id="@+id/forgetpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget password?"
                android:textColor="@color/black"
                android:gravity="right"
                android:fontFamily="@font/cairo"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@id/loginButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.780"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutEditText"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="288dp"
                android:layout_height="60dp"
                android:layout_marginTop="60.5dp"
                android:textSize="20dp"
                android:gravity="center"
                app:cornerRadius="10dp"
                android:fontFamily="@font/cairo"
                android:backgroundTint="@color/main_color"
                android:textAllCaps="false"
                android:text="Log in"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/createanaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:text="@string/createnewaccount"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3F1A99" />

        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>