<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WishlistActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabBarLayout"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/CVBestProducts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageBestProducts1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00F3A526"
                            android:src="@drawable/bloodpressure"
                            />
                        <ImageButton
                            android:id="@+id/shareButtonBestProducts1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00F3A526"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/sharebutton"
                            />

                        <ImageButton
                            android:id="@+id/favouriteButtonBestProducts1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00F3A526"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@drawable/fillhearticon"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/citizen"
                        android:textSize="14dp"
                        android:fontFamily="@font/cairo"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloodpressure"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:fontFamily="@font/cairo"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40 SR"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:fontFamily="@font/cairo"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp" />

                    <Button
                        android:id="@+id/AddtoCart1BP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/cairo"
                        android:text="Add to Cart"
                        android:layout_marginStart="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="12dp"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/shopping_cart"
                        android:textColor="@color/main_color"
                        android:background="@drawable/button_white"
                        android:textSize="14dp"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CVNewArrival2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageNewArrival2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00F3A526"
                            android:src="@drawable/blooddesk"
                            />
                        <ImageButton
                            android:id="@+id/shareButtonNewArrival2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00F3A526"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/sharebutton"
                            />

                        <ImageButton
                            android:id="@+id/favouriteButtonNewArrival2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00F3A526"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@drawable/fillhearticon"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOVA"
                        android:textSize="14dp"
                        android:fontFamily="@font/cairo"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wheelchair"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:fontFamily="@font/cairo"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/_40sr"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 SR"
                            android:textColor="#E20505"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/cairo"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/discount50"/>
                    </LinearLayout>



                    <Button
                        android:id="@+id/AddtoCart2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/cairo"
                        android:text="Add to Cart"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="12dp"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/shopping_cart"
                        android:textColor="@color/main_color"
                        android:background="@drawable/button_white"
                        android:textSize="14dp"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

         <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
             android:layout_gravity="left"
             android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/CVNewArrival1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageNewArrival1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#00F3A526"
                                android:src="@drawable/blooddesk"
                                />
                            <ImageButton
                                android:id="@+id/shareButtonNewArrival1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#00F3A526"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:src="@drawable/sharebutton"
                                />

                            <ImageButton
                                android:id="@+id/favouriteButtonNewArrival1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#00F3A526"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:src="@drawable/fillhearticon"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOVA"
                            android:textSize="14dp"
                            android:fontFamily="@font/cairo"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wheelchair"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:fontFamily="@font/cairo"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40 SR"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/cairo"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp" />

                        <Button
                            android:id="@+id/AddtoCart1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/cairo"
                            android:text="Add to Cart"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginBottom="12dp"
                            android:textAllCaps="false"
                            android:drawableLeft="@drawable/shopping_cart"
                            android:textColor="@color/main_color"
                            android:background="@drawable/button_white"
                            android:textSize="14dp"
                            tools:ignore="MissingConstraints" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
         </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/tabBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:src="@drawable/mask_group_1"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo"
        android:text="Wishlist"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/menu_bar"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_icon_bar"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:src="@drawable/categoryicon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="-5dp"
                android:src="@drawable/carticon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:src="@drawable/wishlisticon"
                app:tint="@color/orange" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:src="@drawable/profileicon"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>