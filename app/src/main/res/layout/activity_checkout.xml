                            android:layout_marginStart="25dp"
                            android:text="Credit Card"
                            android:fontFamily="@font/cairo"
                            android:textSize="18dp"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp"
                            android:layout_marginLeft="25dp" />

                        <LinearLayout
